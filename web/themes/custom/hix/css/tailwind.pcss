@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  input {
    @apply border w-full p-2
  }
  textarea {
    @apply border
  }
  div.form-item {
    @apply mb-2
  }
  div.form-item div.description {
    @apply text-xs text-gray-500
  }
  h1, h2, h3 {
    @apply font-bold
  }
}

@layer components {

  header {
    @apply my-3 mx-2
  }
  header,
  footer {
    @apply text-xs
  }
  footer {
    @apply mt-3
  }
  header .logo img {
    @apply w-16
  }

  #block-hix-header a,
  #block-hix-footer a,
  .user-links a {
    @apply link link-info p-1 hover:decoration-orange-600/80 hover:text-primary
  }
  #block-hix-footer code {
    font-size: 0.85em;
    @apply text-center block mt-4
  }

  main {
    @apply text-sm m-2
  }
  main a {
    @apply underline underline-offset-2 decoration-orange-600/30 decoration-2 transition hover:decoration-orange-600/80 hover:bg-orange-600/30
  }
  main code {
    @apply text-xs
  }
  main h1 {
    @apply text-lg
  }
  main .node h1 {
    @apply text-2xl
  }

  article h2 {
    @apply text-xl;
  }
  article h3 {
    @apply text-lg;
  }
  article hr {
    @apply mb-4;
  }
  article p {
    @apply mb-4 text-gray-950;
  }
  article ul {
    @apply mb-4 pl-4 list-disc;
  }
  article ul li {

  }
  article ul > li > ul {
    @apply mb-0 pl-4 list-inside list-disc;
  }
  article ul > li > ul > li {
    list-style-type: circle;
  }

  [id$="-local-tasks"] ul {
    @apply menu menu-vertical md:menu-horizontal
  }
  [id$="-local-tasks"] ul li {
    @apply bg-blue-100 mb-1 md:mb-0 md:mr-2
  }
  [id$="-local-tasks"] ul li a {
    @apply no-underline
  }
  [id$="-local-tasks"] ul li a.is-active {

  }
  .node .chat-start .chat-bubble:before {
    left: 100%;
    transform: rotate(90deg);
  }
  .node .chat-image small {
    font-size: 60%;
  }
  #block-hix-content header {
    @apply mx-0;
  }
  /* Notification inbox in header */
  .danse-user-notification-widget .views-row,
  .danse-user-notification-widget p {
    @apply hidden;
  }
  .danse-user-notification-widget .badge {
    font-size: 10px;
  }
}
